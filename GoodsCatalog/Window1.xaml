<Window x:Class="GoodsCatalog.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsCatalog"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="400">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Label Content="Добавление категории" Style="{StaticResource baseFont}"
               Foreground="DarkCyan"
               Margin="10"
               FontSize="24"/>
        <TextBox x:Name="category" 
                 Style="{StaticResource font2}"/>
        <Button x:Name="addButton" Content="Добавить"
                Style="{StaticResource font2}"
                Click="addButton_Click"
                Margin="20"/>
    </StackPanel>
</Window>
